{
  "name": "PingCRM",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "nodemon server.js",
    "start": "cross-env NODE_ENV=production node server.js",
    "postinstall": "prisma generate && npm run build",
    "prisma:seed": "node prisma/seed.js",
    "prisma:truncate": "node prisma/truncate.js --env-file=.env",
    "build": "npm run build:ssr && npm run build:client",
    "build:client": "vite build --outDir build/client --manifest",
    "build:ssr": "vite build --outDir build/ssr --ssr src/ssr.jsx",
    "lint": "eslint ./src"
  },
  "dependencies": {
    "@faker-js/faker": "^10.0.0",
    "@inertiajs/react": "^2.1.2",
    "@prisma/client": "^6.14.0",
    "@uidotdev/usehooks": "^2.4.1",
    "@vercel/analytics": "^1.5.0",
    "bcryptjs": "^3.0.2",
    "classnames": "^2.5.1",
    "connect-redis": "^9.0.0",
    "express": "^5.1.0",
    "express-inertia": "^1.6.5",
    "express-session": "^1.18.2",
    "fast-glob": "^3.3.3",
    "lodash": "^4.17.21",
    "lucide-react": "^0.542.0",
    "multer": "^2.0.2",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "prisma-extension-pagination": "^0.7.5",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "redis": "^5.8.2",
    "validatorjs": "^3.22.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tailwindcss/forms": "^0.5.10",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.21",
    "cross-env": "^10.0.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "prisma": "^6.14.0",
    "tailwindcss": "^3.4.17",
    "vite": "^7.1.2"
  }
}
